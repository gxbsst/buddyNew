<ul>
  <% if ::Refinery::Pictures::Admin::PicturesController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.pictures_admin_pictures_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_pictures_admin_picture_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Pictures::Admin::PicturesController.sortable? && ::Refinery::Pictures::Picture.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Pictures"),
                 refinery.pictures_admin_pictures_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Pictures"),
                 refinery.pictures_admin_pictures_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
