<%= form_for [refinery, :pictures_admin, @picture] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @picture,
              :include_object_name => true %>

  
  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'larger widest'  -%>

  </div>
  
  <div class='field'>
    <%= f.label :url -%>
    <%= f.text_field :url  -%>

  </div>
  
  <div class='field'>
    <%= f.label :photo -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :photo_id,
               :image => @picture.photo,
               :toggle_image_display => false %>

  </div>
  
  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.pictures.admin.pictures.picture'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @picture.title) %>
<% end -%>
