<% content_for :body_content_title do %>
  <%= @picture.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @picture.title %>
    </p>
  </section>
  <section>
    <h1>Url</h1>
    <p>
      <%=raw @picture.url %>
    </p>
  </section>
  <section>
    <h1>Photo</h1>
    <p>
      <%= image_fu @picture.photo, nil %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="pictures">
      <% @pictures.each do |picture| %>
        <li>
          <%= link_to picture.title, refinery.pictures_picture_path(picture) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
